<?xml version = "1.0" encoding = "UTF-8" standalone = "yes"?>
<CI>
    <!-- LIST OF GEOMETRICAL DOMAINS  -->
    <physicalDomains>
        <domain name="base" state="air" type="entireDomain"/>
        <domain name="zoneLP"  state="sphere" type="sphere">
            <dataSphere radius="0.2">
                <center x="0." y="0." z="0."/>
            </dataSphere>
        </domain>
    </physicalDomains>

    <!-- LIST OF BOUNDARY CONDITIONS -->
    <boundaryConditions>
        <boundCond name="BC_Xmin" type="symmetry" number="1" />
        <boundCond name="BC_Xmax" type="nonReflecting" number="2" />
        <boundCond name="BC_Ymin" type="symmetry" number="3" />
        <boundCond name="BC_Ymax" type="nonReflecting" number="4" />
        <boundCond name="BC_Zmin" type="symmetry" number="5" />
        <boundCond name="BC_Zmax" type="nonReflecting" number="6" />
    </boundaryConditions>

    <!--  LIST OF STATES  -->
    <state name="air">
        <material type="fluid" EOS="IG_air.xml">
            <dataFluid density="1.2" pressure="1.e6">
                <velocity x="0." y="0." z="0."/>
            </dataFluid>
        </material>
    </state>

    <state name="sphere">
        <material type="fluid" EOS="IG_air.xml">
            <dataFluid density="1.2" pressure="1.e5">
                <velocity x="0." y="0." z="0."/>
            </dataFluid>
        </material>
    </state>

</CI>

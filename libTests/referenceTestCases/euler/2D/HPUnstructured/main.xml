<?xml version = "1.0" encoding = "UTF-8" standalone = "yes"?>
<computationParam>
	<run>euler2DHPUnstructured</run>
	<outputMode format="VTK" binary="false" precision="15"/>
	<timeControlMode iterations="false">
		<iterations number="250" iterFreq="50"/>
		<physicalTime totalTime="2.e-2" timeFreq="5.e-5"/>
	</timeControlMode>
	<computationControl CFL="0.8"/>

	<gradient>
  		<method>green-gauss</method>
	</gradient>

	<probe name="sensor">
		<vertex x="0.7" y="0.75" z="0.05"/>
		<timeControl acqFreq="1e-5."/>       <!-- if negative or nul, recording at each time step -->
	</probe>
	<!-- <resumeSimulation resumeFileNumber="10" AMRsaveFreq="0"/> -->

	<globalQuantity quantity="mass"/>

</computationParam>

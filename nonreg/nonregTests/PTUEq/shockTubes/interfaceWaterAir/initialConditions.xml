<?xml version = "1.0" encoding = "UTF-8" standalone = "yes"?>
<CI>
    <!-- LIST OF GEOMETRICAL DOMAINS  -->
    <physicalDomains>
        <domain name="left" state="water" type="entireDomain"/>
        <domain name="right"  state="air" type="halfSpace">
            <dataHalfSpace axis="x" origin="0.7" direction="positive"/>
        </domain>
    </physicalDomains>

    <!-- LIST OF BOUNDARY CONDITIONS -->
    <boundaryConditions>
        <boundCond name="BC_Xmin" type="nonReflecting" number="1"/>
        <boundCond name="BC_Xmax" type="nonReflecting" number="2"/>
    </boundaryConditions>

    <!--  LIST OF STATES  -->
    <state name="air">
        <material type="fluid" EOS="IG_air.xml">
            <dataFluid alpha="0.999999"/>
        </material>
        <material type="fluid" EOS="SG_water300K.xml">
            <dataFluid alpha="0.000001"/>
        </material>
        <mixture>
            <dataMix pressure = "1.e5" temperature ="300."/>
            <velocity x="0." y="0." z="0."/>
        </mixture>
    </state>

    <state name="water">
        <material type="fluid" EOS="IG_air.xml">
            <dataFluid alpha="0.000001"/>
        </material>
        <material type="fluid" EOS="SG_water300K.xml">
            <dataFluid alpha="0.999999"/>
        </material>
        <mixture>
            <dataMix pressure = "1.e8" temperature ="341.5"/>
            <velocity x="0." y="0." z="0."/>
        </mixture>
    </state>

</CI>
